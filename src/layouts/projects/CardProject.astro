---
interface Technology {
  name: string;
  icon: any;
}

interface Props {
  title: string,
  description: string,
  logo?: string,
  link?: string,
  technologies: Technology[]
}

const project = Astro.props
---

<a 
  class="flex flex-col border border-slate-300 p-3 rounded-lg gap-3 hover:border-slate-400 hover:bg-slate-50 dark:border-slate-700 dark:hover:bg-slate-800"
  href={ project.link }
  target="_blank"
>
  <div class="flex justify-between">
    <div class="flex justify-start items-center gap-2">
      { project.logo && 
        <img 
          src={ project.logo } 
          alt="Logo" 
          width="35"
          height="35" 
          class="rounded-full object-contain w-9 h-9"
        />
      }
      <h2 class="text-slate-800 text-sm sm:text-base lg:text-lg font-semibold dark:text-slate-300">{ project.title }</h2>
    </div>
  </div>
  <div class="flex mb-1">
    <p class="text-xs sm:text-sm text-slate-700 dark:text-slate-300">{ project.description }</p>
  </div>
  <div class="flex justify-start items-center gap-3 mt-auto overflow-hidden">
    { project.technologies.map((tech) => 
      <div class="flex justify-start items-center gap-1 rounded-full bg-slate-200 py-2 px-3 dark:bg-slate-700">
        <tech.icon />
        <span class="text-slate-800 text-xxs sm:text-xs dark:text-slate-300">{ tech.name }</span>
      </div>
    )}
  </div>
</a>