<div class="absolute w-full h-full content-drawing">
  <div class="space space-1"></div>
  <div class="space space-2"></div>
  <div class="space space-3"></div>
  <div class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-white h-1/3 dark:from-slate-900"></div>
</div>

<style>
  .content-drawing {
    z-index: -100;
    overflow: hidden;
    pointer-events: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .space {
    width: var(--size);
    height: var(--size);
    background: #000;
    box-shadow: var(--space-layer);
    position: absolute;
    top: 0;
    left: 0;
    opacity: 75%;
    animation: moveStars var(--duration) linear infinite;
    border-radius: 10px;
  }

  @keyframes moveStars {
    from { transform: translateY(0); }
    to { transform: translateY(-100vh); }
  }
</style>

<script>
  const COLORS:string[] = ["#cbd5e1","#94a3b8","#64748b","#475569"]  
  const generateSpaceLayer = (size: string, selector: string, totalStars:number, duration:string) => {
    const layer = []
    for(let i=0;i<totalStars;i++){
      const color = COLORS[Math.floor(Math.random() * COLORS.length)]
      const x = Math.floor(Math.random() * 100)
      const y = Math.floor(Math.random() * 100)
      layer.push(`${x}vw ${y}vh 0 ${color}, ${x}vw ${y+100}vh 0 ${color}`)
    }

    const container:HTMLElement = document.querySelector(selector)
    container.style.setProperty("--space-layer", layer.join(','))
    container.style.setProperty("--size", size);
    container.style.setProperty("--duration", duration);
  }

  //generateSpaceLayer("1px",".space-1",80,"15s")
  generateSpaceLayer("4px",".space-2",25,"25s")
  generateSpaceLayer("8px",".space-3",8,"35s")
</script>