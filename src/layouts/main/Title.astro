---
interface Props {
  fullname: string
  workposition: string
}

const { fullname, workposition } = Astro.props
---
<div class="relative">
  <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-800 text-center my-3 lg:my-5 dark:text-slate-200 mx-1">Â¡Hola, soy {fullname}!</h1>
</div>
<div class="flex justify-center items-center gap-1 mt-3 relative lg:mb-8 mb-5">
  <h2 class="text-3xl sm:text-4xl lg:text-5xl text-slate-800 dark:text-slate-300 text-center text-effect whitespace-nowrap">{workposition}</h2>
  <div class="bloque bg-slate-700 dark:bg-slate-300 mt-1 lg:mt-2"></div>
</div>

<style>
  .text-effect {
    width: 9ch;
    opacity: 0;
    animation: typing 1.1s steps(9), visible 0.1s linear forwards;
    animation-delay: 1s;
    overflow: hidden;
    font-weight: 400;
    font-family: 'Bungee Shade', system-ui;
  }

  .bloque {
    height: 0rem;
    width: 0.2rem;
    animation: blink 1.5s infinite;
    animation-delay: 1s;
  }

  h1 {
    font-weight: 500;
    opacity: 0;
    transform: translateY(-20px);
    animation: fadeY 1s ease forwards;
    animation-delay: 0.5s;
  }

  .line-one {
    left: -1rem;
  }

  .lines-time {
    opacity: 0;
    animation: fade-line 1s ease forwards;
    animation-delay: 1s;
  }

  @keyframes fadeY {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes typing {
    from {
      width: 0;
    }
  }

  @keyframes blink {
    0% { height: 2.3rem; }
    20% { height: 2.3rem; }
    50% { height: 0rem; }
    80% { height: 2.3rem; }
    100% { height: 2.3rem; }
  }

  @keyframes blinkLG {
    0% { height: 1.5rem; }
    20% { height: 1.5rem; }
    50% { height: 0rem; }
    80% { height: 1.5rem; }
    100% { height: 1.5rem; }
  }

  @keyframes visible {
    from { opacity: 1; }
    to { opacity: 1; }
  }

  @keyframes fade-line {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @media screen and (max-width: 1024px){
    .bloque {
      animation: blinkLG 1.5s infinite;
    }
  }

  @media screen and (max-width: 515px){
    .line-one {
      display: none;
    }
  }

  @media screen and (max-width: 452px){
    .line-one {
      display: block;
      left: 1rem;
    }
  }  
</style>