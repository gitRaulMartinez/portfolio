---
interface Props {
  urlPerfil: string
}

const { urlPerfil } = Astro.props
---

<figure>
  <img 
    src={urlPerfil} 
    alt="Foto de perfil" 
    loading="lazy"
    decoding="async"
    class="h-[120px] w-[120px] sm:h-[130px] sm:w-[130px] object-cover rounded-full image-perfil margin-top-perfil"
  >
</figure>

<style>
  .image-perfil {
    opacity: 0;
    transform: translateY(-20px);
    animation: fadeImage 1s ease forwards;
    animation-delay: 0s;
  }

  .margin-top-perfil {
    margin-top: 250px;
  }

  @media screen and (max-height: 700px) {
    .margin-top-perfil {
      margin-top: 150px;
    }
  }

  @keyframes fadeImage {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>