---
interface Props {
  cv: string
}

const { cv } = Astro.props
---
<div class="mt-10 mb-2 margin-bottom-buttons">
  <a 
    href="#Proyectos" target="_blank"
    class="
      border border-slate-700 bg-slate-700 text-slate-100 px-5 py-3 rounded-full cv lg:px-5 lg:py-3 
      hover:bg-slate-800 cursor-pointer hover:border-slate-800 transition-all mr-2 lg:mr-5 text-base lg:text-base
      dark:bg-slate-100 dark:text-slate-700 dark:hover:border-white dark:border-slate-100 dark:hover:bg-white
    "
  >
    Ver mis Proyectos
  </a>
  <a 
    href={cv} target="_blank"
    class="
      border border-slate-200 bg-white text-slate-600 px-5 py-3 rounded-full cv lg:px-5 lg:py-3 
      hover:bg-slate-50 cursor-pointer hover:border-slate-300 transition-all text-base lg:text-base
      dark:bg-slate-900 dark:border-slate-700 dark:text-slate-300 dark:hover:bg-slate-700
    "
  >
    Ver mi CV
  </a>
</div>

<style>
  .cv {
    font-family: 'Open Sans Variable', sans-serif;
    font-weight: 600;
    opacity: 0;
    animation: fade 1s ease forwards;
    animation-delay: 1.5s;
  }

  .margin-bottom-buttons {
    margin-bottom: 250px;
  }

  @media screen and (max-height: 700px) {
    .margin-bottom-buttons {
      margin-bottom: 150px;
    }
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>