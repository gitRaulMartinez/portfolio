---
import Moon from '../icons/Moon.astro'
import Sun from '../icons/Sun.astro'
import ArrowDown from '../icons/ArrowDown.astro'
---

<div 
  x-data=`{ 
    open: false, 
    theme: 'default',
    dark: false,
    init() {
      const theme = localStorage.getItem('theme')
      if(theme){
        this.theme = (theme === 'light') ? 'light' : 'dark'
      }
    },
    toDark() {
      localStorage.setItem('theme','dark')
      const html = document.querySelector('html')
      html.classList.add('dark')
      this.theme = 'dark'
      this.open = false
      this.dark = true
    },
    toLight() {
      localStorage.setItem('theme','light')
      const html = document.querySelector('html')
      html.classList.remove('dark')
      this.theme = 'light'
      this.open = false
      this.dark = false
    },
    toDefault() {
      localStorage.removeItem('theme')
      const html = document.querySelector('html')
      if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        html.classList.add('dark')
        this.dark = true
      } else {
        html.classList.remove('dark')
        this.dark = false
      }
      this.theme = 'default'
      this.open = false
    }
  }`
  class="absolute top-0 -translate-x-1/2 left-1/2 flex justify-center items-center duration">
  <div class="relative">
    <div class="absolute top-0 left-1/2 -translate-x-1/2">
      <button 
        type="button"
        x-show="!open"
        @click="open = true"
        class="text-slate-700 h-[50px] w-[50px] my-[3px] flex justify-center items-center p-2 cursor-pointer relative rounded-full transition-all dark:text-slate-300 group/arrow">
        <template x-if="dark"><Moon /></template>
        <template x-if="!dark"><Sun /></template>
        <span class="
          absolute -bottom-2 left-1/2 -translate-x-1/2 text-slate-600 transition-all opacity-0 invisible pointer-events-none
          group-hover/arrow:visible group-hover/arrow:-bottom-4 group-hover/arrow:opacity-100 dark:text-slate-300"
        >
          <ArrowDown />
        </span>
      </button>
    </div>
    <div 
      x-show="open"
      class="w-full max-w-sm min-w-[320px]"
      style="display: none;"
      x-transition:enter="transition-transform ease-out duration-300"
      x-transition:enter-start="-translate-y-56"
      x-transition:enter-end="translate-y-0"
      x-transition:leave="transition-transform ease-in duration-300"
      x-transition:leave-start="translate-y-0"
      x-transition:leave-end="-translate-y-56"
      @click.outside="open = false">
      <div class="
        bg-white rounded-b-xl p-4 flex flex-col justify-start items-stretch relative gap-1 shadow-slate-200 shadow-sm
        dark:bg-slate-900 dark:shadow-slate-900
      ">
        <button 
          type="button"
          @click="toDefault()"
          class="
            flex items-center gap-4 justify-between py-4 px-4 hover:bg-slate-200/50 rounded-lg cursor-pointer text-slate-600 hover:text-slate-700
            dark:text-slate-300 dark:hover:text-slate-100 dark:hover:bg-slate-600 
          "
        >
          <span class="py-1">Por defecto</span>
          <span 
            x-show="theme === 'default'"
            style="display: none;"
            class="bg-slate-700 text-slate-200 text-sm font-semibold rounded-full py-1 px-2.5 dark:bg-slate-200 dark:text-slate-700">
            Activo
          </span>
        </button>
        <button 
          type="button"
          @click="toLight()"
          class="
            flex items-center gap-4 justify-between py-4 px-4 hover:bg-slate-200/50 rounded-lg cursor-pointer text-slate-600 hover:text-slate-700
            dark:text-slate-300 dark:hover:text-slate-100 dark:hover:bg-slate-600 
          "
        >
          <span class="py-1">Modo Claro</span>
          <span 
            x-show="theme === 'light'"
            style="display: none;"
            class="bg-slate-700 text-slate-200 text-sm font-semibold rounded-full py-1 px-2.5 dark:bg-slate-200 dark:text-slate-700">
            Activo
          </span>
        </button>
        <button 
          type="button"
          @click="toDark()"
          class="
            flex items-center gap-4 justify-between py-4 px-4 hover:bg-slate-200/50 rounded-lg cursor-pointer text-slate-600 hover:text-slate-700
            dark:text-slate-300 dark:hover:text-slate-100 dark:hover:bg-slate-600 
          "
        >
          <span class="py-1">Modo Oscuro</span>
          <span 
            x-show="theme === 'dark'"
            style="display: none;"
            class="bg-slate-700 text-slate-200 text-sm font-semibold rounded-full py-1 px-2.5 dark:bg-slate-200 dark:text-slate-700">
            Activo
          </span>
        </button>
      </div>
    </div>
  </div>
  
  
</div>

