---
interface Props {
	title: string
}

const { title } = Astro.props

import '@fontsource-variable/roboto-mono'
import '@fontsource-variable/open-sans'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-r from-white to-slate-100 dark:from-slate-900 dark:to-slate-800">
		<slot />
	</body>
</html>

<style is:global>
	body {
  	font-family: 'Roboto Mono Variable', monospace;
	}
</style>

<script>
	const html = document.querySelector('html')
	if ((window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) || (localStorage.getItem('theme') && localStorage.getItem('theme') === 'dark')) {
		html.classList.add('dark')
	} else {
		html.classList.remove('dark')
	}
</script>
