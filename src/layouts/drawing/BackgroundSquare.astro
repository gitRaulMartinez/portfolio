---
import DockerBox from './boxes/DockerBox.astro'
import TailwindBox from './boxes/TailwindBox.astro'
import AstroSVGBox from './boxes/AstroSVGBox.astro'
import KotlinBox from './boxes/KotlinBox.astro'
import VueBox from './boxes/VueBox.astro'
import PostgresqlBox from './boxes/PostgresqlBox.astro'
---
<div class="absolute w-full h-full">
  <div class="relative w-full h-full flex justify-center items-start">
    <div class="square dark:square-dark w-full h-full max-w-screen-xl relative overflow-hidden">
      <div class="absolute top-0 left-0 w-20 sm:w-36 h-full bg-gradient-to-r from-white dark:from-slate-900 to-transparent pointer-events-none"></div>
      <div class="absolute top-0 right-0 w-20 sm:w-36 h-full bg-gradient-to-l from-white dark:from-slate-900 to-transparent pointer-events-none"></div>
      <div class="absolute bottom-0 left-0 w-full h-20 sm:h-36 bg-gradient-to-t from-white dark:from-slate-900 to-transparent pointer-events-none"></div>
      <DockerBox />
      <AstroSVGBox />
      <TailwindBox />
      <KotlinBox />
      <PostgresqlBox />
      <VueBox />
    </div>
  </div>
</div>
<style>
  .square {
    @apply bg-[radial-gradient(theme(colors.dot-light)_1px,transparent_1px)] dark:bg-[radial-gradient(theme(colors.dot-dark)_1px,transparent_1px)];
    background-size: 30px 30px;
  }
</style>