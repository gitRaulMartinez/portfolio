---
import Postgresql from '../../svgs/Postgresql.astro'
---

<div class="
  absolute left-1/2 top-1/2
  flex justify-center items-center rounded-xl bg-white/10 postgresql
  border border-1 border-slate-200 p-2 w-[60px] h-[60px] backdrop-filter backdrop-blur-md dark:border-slate-700
">
  <Postgresql />
</div>

<style>
  .postgresql {
    transition: all ease-in-out 0.5s;
    animation: postgresqlInFull 1s ease forwards;
    opacity: 0;
    animation-delay: 2.25s;
  }

  @keyframes postgresqlInFull {
    from {
      opacity: 0;
      transform: translate(0px,320px);
    }
    to {
      opacity: 1;
      transform: translate(0px,300px);
    }
  }

  @keyframes postgresqlIn1024 {
    from {
      opacity: 0;
      transform: translate(0px,300px);
    }
    to {
      opacity: 1;
      transform: translate(0px,280px);
    }
  }

  @keyframes postgresqlIn512 {
    from {
      opacity: 0;
      transform: translate(-20px,300px);
    }
    to {
      opacity: 1;
      transform: translate(-20px,280px);
    }
  }

  @media screen and (max-height: 750px) {
    .postgresql {
      display: none;
    }
  }

  @media screen and (max-width: 1024px) {
    .postgresql {
      animation: postgresqlIn1024 1s ease forwards;
      animation-delay: 2.25s;
    }
  }

  @media screen and (max-width: 512px) {
    .postgresql {
      animation: postgresqlIn512 1s ease forwards;
      animation-delay: 2.25s;
    }
  }
</style>