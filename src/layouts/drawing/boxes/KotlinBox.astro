---
import Kotlin from '../../svgs/Kotlin.astro'
---

<div class="
  absolute left-1/2 top-1/2
  flex justify-center items-center rounded-xl bg-white/10
  w-[55px] h-[55px] sm:w-[60px] sm:h-[60px]
  border border-1 border-slate-200 p-2 backdrop-filter backdrop-blur-md kotlin dark:border-slate-700
">
  <Kotlin />
</div>

<style>
  .kotlin {
    transition: all ease-in-out 0.5s;
    animation: kotlinInFull 1s ease forwards;
    opacity: 0;
    animation-delay: 2s;
  }

  @keyframes kotlinInFull {
    from {
      opacity: 0;
      transform: translate(-420px,220px);
    }
    to {
      opacity: 1;
      transform: translate(-400px,200px);
    }
  }

  @keyframes kotlinIn1024 {
    from {
      opacity: 0;
      transform: translate(-240px,240px);
    }
    to {
      opacity: 1;
      transform: translate(-220px,220px);
    }
  }

  @keyframes kotlinIn512 {
    from {
      opacity: 0;
      transform: translate(-160px,240px);
    }
    to {
      opacity: 1;
      transform: translate(-140px,220px);
    }
  }

  @media screen and (max-width: 1024px) {
    .kotlin {
      animation: kotlinIn1024 1s ease forwards;
      animation-delay: 2s;
    }
  }

  @media screen and (max-width: 512px) {
    .kotlin {
      animation: kotlinIn512 1s ease forwards;
      animation-delay: 2s;
    }
  }
</style>