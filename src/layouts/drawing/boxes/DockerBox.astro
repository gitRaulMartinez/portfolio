---
import Docker from '../../svgs/Docker.astro'
---

<div class="
  absolute left-1/2 top-1/2
  flex justify-center items-center rounded-xl bg-white/10
  w-[55px] h-[55px] sm:w-[60px] sm:h-[60px]
  border border-1 border-slate-200 p-2 backdrop-filter backdrop-blur-md docker dark:border-slate-700
">
  <Docker />
</div>

<style>
  .docker {
    transition: all ease-in-out 0.5s;
    animation: dockerInFull 1s ease forwards;
    opacity: 0;
    animation-delay: 1.5s;
  }

  @keyframes dockerInFull {
    from {
      opacity: 0;
      transform: translate(-320px,-320px);
    }
    to {
      opacity: 1;
      transform: translate(-300px,-300px);
    }
  }

  @keyframes dockerIn700 {
    from {
      opacity: 0;
      transform: translate(-320px,-240px);
    }
    to {
      opacity: 1;
      transform: translate(-300px,-220px);
    }
  }

  @keyframes dockerIn1024 {
    from {
      opacity: 0;
      transform: translate(-220px,-240px);
    }
    to {
      opacity: 1;
      transform: translate(-200px,-230px);
    }
  }

  @keyframes dockerIn1024and700 {
    from {
      opacity: 0;
      transform: translate(-220px,-230px);
    }
    to {
      opacity: 1;
      transform: translate(-200px,-210px);
    }
  }

  @keyframes dockerIn512 {
    from {
      opacity: 0;
      transform: translate(-160px,-240px);
    }
    to {
      opacity: 1;
      transform: translate(-140px,-230px);
    }
  }

  @media screen and (max-height: 700px) {
    .docker {
      animation: dockerIn700 1s ease forwards;
      animation-delay: 1.5s;
    }
  }

  @media screen and (max-width: 1024px) {
    .docker {
      animation: dockerIn1024 1s ease forwards;
      animation-delay: 1.5s;
    }
  }

  @media screen and (max-width: 1024px) and (max-height: 700px) {
    .docker {
      animation: dockerIn1024and700 1s ease forwards;
      animation-delay: 1.5s;
    }
  }

  @media screen and (max-width: 512px) {
    .docker {
      animation: dockerIn512 1s ease forwards;
      animation-delay: 1.5s;
    }
  }
</style>