---
interface Props {
  title: string;
  icon: any;
  bgColor?: string;
  textColor?: string;
}

const { title, icon: Icon, bgColor = "bg-purple-500" } = Astro.props;
---

<section class="flex flex-row gap-4 max-w-screen-md">
  <div class="shrink-0 w-8 sm:w-12 flex flex-col gap-4 justify-start items-center pl-4 lg835:pl-0">
    <div class="relative shrink-0 h-12 flex justify-center items-center">
      <Icon />
      <div class={`absolute top-1/2 right-1/2 translate-x-1/2 -translate-y-1/2 ${bgColor} w-10 h-10 rounded-full blur-lg -z-10`}></div>
    </div>
    <div class="bg-slate-500 dark:bg-slate-700 w-1 grow rounded-full"></div>
  </div>
  <div class="max-w-full grow flex flex-col gap-4">
    <h1 class="text-xl lg:text-3xl font-semibold h-12 flex items-center text-slate-800 dark:text-slate-200">{title}</h1>
    <slot />
  </div>
</section>